generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id    String @id @default(uuid()) @db.Char(36)
  email String @unique
  name  String?
  posts Post[]
}

model Post {
  id    String     @id @default(uuid()) @db.Char(36)
  title     String
  content   String? @db.Text
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  String
}